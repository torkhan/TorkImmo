{% extends 'base.html.twig' %}

{% block title %}Zip index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>Ajouter une ville</h1>
    <h1 class="ml-auto"><a href="{{ path('produits_index') }}">Retour Ã  la liste</a></h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomVille</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zip in zips %}
            <tr>
                <td>{{ zip.id }}</td>
                <td>{{ zip.nomVille }}</td>
                <td>{{ zip.zipCode }}</td>
                <td>
                    <a class="btn btn-primary text-white href="{{ path('zip_show', {'id': zip.id}) }}">voir</a>
                    <a class="btn btn-info text-white" href="{{ path('zip_edit', {'id': zip.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning text-white" href="{{ path('zip_new') }}">Ajouter</a>
</div>
{% endblock %}
