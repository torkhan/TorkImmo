{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="mb-5">Nouveau collaborateur</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email, {attr: {placeholder: 'XXXX@YYYYY.ZZ'}})  }}
