{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>PrixHt</th>
                <th>Description</th>
                <th>NombreChambre</th>
                <th>Surface</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Photo</th>

                <th>DateDeCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ TypeProduit.type }}</td>
                <td>{{ produit.adresse }}</td>
                <td>{{ produit.prixHt }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.nombreChambre }}</td>
                <td>{{ produit.surface }}</td>
                <td>{{ produit.longitude }}</td>
                <td>{{ produit.latitude }}</td>
                <td>{{ produit.photoBase }}</td>

                <td>{{ produit.dateDeCreation ? produit.dateDeCreation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produits_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produits_new') }}">Create new</a>
{% endblock %}
